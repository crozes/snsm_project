<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/logoScenario"
                android:layout_width="71dp"
                android:layout_height="64dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/vedette" />

            <TextView
                android:id="@+id/nomScenario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/logoScenario"
                android:text="Name"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/dateScenario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nomScenario"
                android:layout_toRightOf="@+id/logoScenario"
                android:text="date" />

            <TextView
                android:id="@+id/tvEtatMer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/nomScenario"
                android:text="Etat Mer"
                android:textAlignment="textEnd"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/tvSensNav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textAlignment="textEnd"
                android:layout_marginLeft="30dp"
                android:layout_below="@+id/tvEtatMer"
                android:layout_toRightOf="@+id/nomScenario"
                android:text="Sens Navigation"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/tvDuree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textAlignment="textEnd"
                android:layout_marginLeft="30dp"
                android:layout_below="@+id/tvSensNav"
                android:text="Duree"
                android:textSize="15sp"
                />
            <Button
                android:id="@+id/bModifier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modifier"
                android:textSize="10sp"
                android:layout_below="@+id/tvDuree"
                />
            <Button
                android:id="@+id/bSupprimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Supprimer"
                android:textSize="10sp"
                android:layout_below="@+id/tvDuree"
                android:layout_toRightOf="@+id/bModifier"
                />
            <Button
                android:id="@+id/bPartager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Partager"
                android:textSize="10sp"
                android:layout_below="@+id/tvDuree"
                android:layout_toRightOf="@+id/bSupprimer"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>